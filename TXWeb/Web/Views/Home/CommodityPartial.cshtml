@{
    Layout = null;
    bool isAll = ViewBag.IsAll;
    var title = isAll ? "所有商品" : "个人商品";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">
            @title
            @if (!isAll)
            {
                <button onclick="AddCom()" type="button" class="btn btn-primary">+添加商品</button>
            }
        </h1>
    </div>
</div>

@if (isAll)
{
    <div class="row" style="margin-left:2px;margin-bottom: 15px;">
        <div class="col-lg-12" style="height: 36px;">
            <div class="div1">
                <div class="div2"><span>分类A</span></div>
                <div class="div3">
                    <ul id="ul1">
                        <li class="aa1"><a href="#">分类1</a></li>
                        <li class="aa1"><a href="#">分类2</a></li>
                        <li class="aa1"><a href="#">分类3</a></li>
                        <li class="aa1"><a href="#">分类4</a></li>
                        <li class="aa1"><a href="#">分类5</a></li>
                        <li class="aa1"><a href="#">分类6</a></li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <div class="row" style="margin-left:2px;margin-bottom: 15px;">
        <div class="col-lg-12" style="height: 41px;">
            <div class="div1" style="background-color: #f5f5f5;border: solid 1px #e8e8e8;">
                <div style="height: 34px;padding-left: 20px;">
                    <h6 style="float: left;">价格区间：</h6>
                    <ul style="float: left;margin-left: -35px; ">
                        <li style="float: left;width: 62px;"><input type="text" name="sprice" placeholder="¥" class="input1"></li>
                        <li style="float: left;width: 10px;text-align: center;">-</li>
                        <li style="float: left;width: 62px;"><input type="text" name="hprice" placeholder="¥" class="input1"></li>
                    </ul>
                    <div>
                        <a href="#"><button class="bbutton">确定</button></a>
                    </div>
                </div>
                <div style="height: 34px;display: inline;">
                    <h6 style="float: left;margin-top:-22px;padding-left: 50px;">关键词搜索：</h6>
                    <ul style="float: left; margin-top:-32px;margin-left: -40px;">
                        <li style="float: left;width: 150px;">
                            <input type="text" name="theseach" class="input2">
                        </li>
                        <li style="margin-left: 152px;margin-top:-2px; ">
                            <a href="#"><button class="bbutton">搜索</button></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        @for (int i = 0; i < 8; i++)
        {
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6">
                <div class="thumbnail">
                    <a href="">
                        <img src="~/Content/Images/good.jpg" alt="..." class="img-responsive">
                    </a>
                    <div class="caption">
                        <a href="">
                            <h4>华为P20 PRO</h4>
                        </a>
                        <p style="color:red;">
                            现货当天发 送399豪礼Huawei/华为 P20 pro全网通手机华为
                        </p>
                        <div style="height: 46px;">
                            <h>同学价:<h class="price">¥3788</h></h>
                            <h style="display: block;">市场价:<h class="price">¥3788</h></h>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<div class="row" style="text-align: center;">
    <ul class="pagination">
        <li class="disabled"><a href="#">&laquo;上一页</a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#">4</a></li>
        <li><a href="#">5</a></li>
        <li><a style="border-top:none;border-bottom: none;">...</a></li>
        <li><a href="#">&raquo;下一页</a></li>
    </ul>
</div>

<script>
    $(document).ready(function () {
        $("#ul1 li").click(function () {
            $(this).addClass("selected").siblings().removeClass("selected");
            $("#ul1 li a").removeClass("fontcolor");
            $(this).children("a").addClass("fontcolor");
        })
    })
</script>