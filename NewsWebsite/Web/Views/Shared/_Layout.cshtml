<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href="~/Content/css/main.css" rel="stylesheet" />
    <link href="~/Content/css/log.css" rel="stylesheet" />
    <title>商机头条</title>
    <link rel="shortcut icon" href="~/Content/img/top.jpg" type="image/x-icon">
    <style>
        .onshow {
            color: red;
        }

        .logreg {
            z-index: 1;
            background-color: orange;
            width: 600px;
            height: auto;
            position: fixed;
            top: 50px;
            left: 250px;
            display: none;
        }
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/QRcode/jquery.qrcode.min.js"></script>
    <script>
        $(function () {
            jQuery('#qrcode').qrcode({
                render: "canvas",
                width: 150,
                height: 150,
                text: window.location.href
            });
        })
    </script>
    <script type="text/javascript">
        window.onload = function () {
            var oDiv = document.getElementById("typeInfo"),
                H = 0,
                Y = oDiv
            while (Y) {
                H += Y.offsetTop;
                Y = Y.offsetParent;
            }
            window.onscroll = function () {
                var s = document.body.scrollTop || document.documentElement.scrollTop
                if (s > H) {
                    oDiv.style = "position:fixed;top:0;"
                } else {
                    oDiv.style = ""
                }
            }
        }
    </script>
</head>
<body>
    @RenderBody()
</body>
</html>