    function SaveComment() {
        var comm = $("#content").val();
        if (comm == '') {
            alert('评论不能为空！'); return;
        }

        $.ajax({
            url: '/TestRemark/InsertRemark',
            type: 'post',
            data: {
                ArticleID: '6672546',
                Remark: comm
            },
            success: function (data) {
                alert(data);
            }
        })
    }
