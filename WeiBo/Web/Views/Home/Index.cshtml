<script>
    var catid = '@ViewBag.CatID';
    var lid = 'li_' + catid;

    var pagecount = 1; //当前页码
    var total = '@ViewBag.Count'; //总页数
</script>

<script>
    function SelectCat(index) {
        window.location.href = '/Home/Index?catid=' + index;
    }

    $(function () {
        var ul = $('#ulcat').children();
        for (var i = 0; i < ul.length; i++) {
            if (ul[i].id == lid) {
                ul[i].className = 'checkedType';
            }
        }

        $.ajax({
            url: '/Home/ContentList',
            type: 'post',
            data: {
                catid: catid
            },
            success: function (data) {
                $('#cont').html(data);
                $('#index').html(' 第 ' + pagecount + ' 页 ');
                $('#total').html('共 ' + total + ' 页');
            }
        })

    })

    function Paging(state) {
        if (state == 'Previous') {
            var c = pagecount - 1;
            if (c <= 0) {
                $('#error').html('已经是第1页了');
                return;
            } else {
                pagecount = c;
            }
        } else {
            var c = pagecount + 1;
            if (c > total) {
                $('#error').html('已经是最后一页了');
                return;
            } else {
                pagecount = c;
            }
        }

        $('#error').html('');
        $('#pcount').val('');

        $.ajax({
            url: '/Home/ContentList',
            type: 'post',
            data: {
                index: parseInt(pagecount - 1),
                catid: catid
            },
            success: function (data) {
                $('#cont').html(data);
                $('#index').html(' 第 ' + pagecount + ' 页 ');
                $('#total').html('共 ' + total + ' 页');
            }
        })
    }

    function Jump() {
        var count = $('#pcount').val();

        if (count != '' && count > 0 && count <= parseInt(total)) {
            $('#error').html('');
            $.ajax({
                url: '/Home/ContentList',
                type: 'post',
                data: {
                    index: parseInt(count) - 1,
                    catid: catid
                },
                success: function (data) {
                    $('#cont').html(data);
                    $('#index').html(' 第 ' + count + ' 页 ');
                    $('#total').html('共 ' + total + ' 页');
                    pagecount = parseInt(count);
                }
            })
        } else {
            $('#error').html('请输入正确的值');
        }
    }

    function First() {
        $.ajax({
            url: '/Home/ContentList',
            type: 'post',
            data: {
                index: 0,
                catid: catid
            },
            success: function (data) {
                $('#cont').html(data);
                $('#index').html(' 第 ' + 1 + ' 页 ');
                $('#total').html('共 ' + total + ' 页');
                pagecount = 1;
            }
        })
    }
</script>

