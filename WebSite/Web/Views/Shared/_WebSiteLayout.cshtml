    <style>
        section {
            width: 100%;
            margin: auto;
            text-align: left;
            margin-top: 10px;
        }

        .wbtn {
            height: 25px;
            padding: 0px;
            margin: 0px;
            font-size: 15px;
        }

        .addbtn {
            width: 80px;
            height: 25px;
            padding: 0px;
            margin: 10px 5px 0px 0px;
            font-size: 15px;
            float: right;
        }
    </style>
