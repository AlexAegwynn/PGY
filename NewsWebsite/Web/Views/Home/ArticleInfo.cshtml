    })
</script>
<script>
    function ILogin() {
        $.ajax({
            url: '/Authentication/Index',
            type: 'post',
            success: function (data) {
                $('#GrayBG').show();
                var log = $('#logreg');
                log.html(data);
                log.show();
            }
        })
    }

    function IRegister() {
        $.ajax({
            url: '/Authentication/Register',
            type: 'post',
            success: function (data) {
                $('#GrayBG').show();
                var reg = $('#logreg');
                reg.html(data);
                reg.show();
            }
        })
    }

    function closeRight() {
        $('#GrayBG').hide();
        var lr = $('#logreg');
        lr.html('');
        lr.hide();
    }
</script>
